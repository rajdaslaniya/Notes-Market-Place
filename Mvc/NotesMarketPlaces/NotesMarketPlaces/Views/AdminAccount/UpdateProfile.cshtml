@model NotesMarketPlaces.ViewModels.UpdateAdminProfileViewModel
@{
    ViewBag.Title = "Update Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!--Blank-->
<section class="blank"></section>
<!--End Blank-->
<!--My Profile-->
<section id="my-download">
    <div class="container">
        <div class="content-box-md">
            <div class="row">
                <div class="col-lg-12 heading" style="margin-bottom:20px">My Profile</div>
            </div>
            @using (Html.BeginForm("UpdateProfile", "AdminAccount", FormMethod.Post,new { enctype="multipart/form-data"}))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="form-group col-lg-6 col-md-8 col-sm-9 col-12">
                        <label for="fname">First Name*</label>
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @id = "fname", placeholder = "Enter your first name" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-8 col-sm-9 col-12">
                        <label for="lname">Last Name*</label>
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @id = "ftext", placeholder = "Enter your last name" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-8 col-sm-9 col-12">
                        <label for="email">Email*</label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @id = "ftext", placeholder = "Enter your email address", @style = "background-color: #F7F3F2", @readonly = "true" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-8 col-sm-9 col-12">
                        <label for="semail">Secondary Email*</label>
                        @Html.EditorFor(model => model.SecondryEmail, new { htmlAttributes = new { @class = "form-control", @id = "femail", placeholder = "Enter your Secondry email" } })
                        @Html.ValidationMessageFor(model => model.SecondryEmail, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-8 col-sm-9 col-12">
                        <label id="phone">Phone Number</label>
                        <div class="form-row">
                            <div class="col-lg-3 col-md-3 col-sm-4 col-4">
                                @Html.DropDownListFor(model => model.PhoneCode, new SelectList(Model.PhoneCodeList, "CountryCode", "CountryCode", Model.PhoneCode), "Select code", new { @class = "form-control", @id = "countryCode" })
                                @Html.ValidationMessageFor(model => model.PhoneCode, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-lg-9 col-md-9 col-sm-8 col-8">
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @id = "phonenumber", placeholder = "Enter your Phone Number" } })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-8 col-sm-9  col-12 type-file">
                        <label for="profilepicture">Profile Picture</label>
                        @Html.TextBoxFor(model => model.ProfilePicture, new { @type = "file", accept = ".jpg , .jpeg , .png", @class = "form-control-file image-upload", @id = "profilepicture" })
                        @Html.ValidationMessageFor(model => model.ProfilePicture, "", new { @class = "text-danger" })
                        @if (!string.IsNullOrEmpty(Model.Picture))
                        {
                            <p>Too see a profile picture <a href="@Url.Content(Model.Picture)" target="_blank">Click Here</a></p>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-1 col-md-2 col-sm-3 col-3">
                        <button class="btn btn-color" title="submit" role="button" type="submit">Submit</button>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!--End My Profile-->