@model IEnumerable<NotesMarketPlaces.ViewModels.MemberViewModel>
@{
    ViewBag.Title = "Admin - Member";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!--Blank-->
<section class="blank"></section>
<!--End Blank-->
<!--Member Page-->
<section id="member-page">
    <div class="container">
        <div class="content-box-md">
            @using (Html.BeginForm("Member", "AdminMember", FormMethod.Get))
            {
                <div class="row">
                    <div class="form-group col-lg-7 col-md-7 col-sm-5 col-12">
                        <div class="heading" style="margin-bottom: 0px">
                            Members
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-5 col-sm-7 col-8">
                        <div class="row search" id="table-search">
                            <div class="search-bar col-lg-9 col-md-9 col-sm-9 col-9 form-group">
                                <input type="search" class="form-control" id="search" placeholder="Search" name="search" value="@ViewBag.MemberSearch">
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-3 col-3  btn-search">
                                <button class="btn btn-color" title="Search" role="button" type="submit">Search</button>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="row table-general table-responsive">
                <div class="col-lg-12">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sr no.</th>
                                <th>@Html.ActionLink("First Name", "Member", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "FirstName" })</th>
                                <th>@Html.ActionLink("Last Name", "Member", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "LastName" })</th>
                                <th>@Html.ActionLink("Email", "Member", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "Email" })</th>
                                <th>@Html.ActionLink("Joining Date", "Member", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "JoiningDate" })</th>
                                <th class="content-center">@Html.ActionLink("Under Review Notes", "Member", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "UnderReviewNotes" })</th>
                                <th class="content-center">@Html.ActionLink("Published Notes", "Member", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "PublishedNotes" })</th>
                                <th class="content-center">@Html.ActionLink("Downloaded Notes", "Member", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "DownloadedNotes" })</th>
                                <th class="content-center">@Html.ActionLink("Total Expenses", "Member", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "TotalExpenses" })</th>
                                <th class="content-center">@Html.ActionLink("Total Earning", "Member", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "TotalEarning" })</th>
                                <th class="content-center"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() == 0)
                            {
                                <tr class="content-center">
                                    <td colspan="11">No Record Found</td>
                                </tr>
                            }
                            else
                            {
                                var srno = (ViewBag.PageNumber - 1) * 5;
                                foreach (var item in Model)
                                {
                                    { srno = srno + 1; }
                                    <tr>
                                        <th scope="row">@srno</th>
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName</td>
                                        <td>@item.Email</td>
                                        <td>@item.JoiningDate.Value.ToString("dd-MM-yyyy,hh:mm")</td>
                                        <td class="content-center"><a class="change-color" href="@Url.Action("NotesUnderReview","AdminNote",new { member=item.RegisterID})">@item.NotesUnderReview</a></td>
                                        <td class="content-center"><a class="change-color" href="@Url.Action("PublishedNote","AdminNote",new { member=item.RegisterID})">@item.PublishedNotes</a></td>
                                        <td class="content-center"><a class="change-color" href="@Url.Action("AdminDownload","AdminNote",new { member=item.RegisterID})">@item.DownloadedNote</a></td>
                                        @if (item.TotalExpensis == null)
                                        {
                                            <td class="content-center"><a class="change-color" href="@Url.Action("AdminDownload","AdminNote",new { member=item.RegisterID})">0</a></td>
                                        }
                                        else
                                        {
                                            <td class="content-center"><a class="change-color" href="@Url.Action("AdminDownload","AdminNote",new { member=item.RegisterID})">@item.TotalExpensis</a></td>

                                        }
                                        @if (item.TotalEarning == null)
                                        {
                                            <td class="content-center">0</td>
                                        }
                                        else
                                        {
                                            <td class="content-center">@item.TotalEarning</td>

                                        }
                                        <td class="content-center">
                                            <div class="table-images">
                                                <div class="btn-group dropleft">
                                                    <button type="button" id="dropdownMenu2" class="btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <img src="~/Image/images/icon/dots.png" alt="menu" class="dots">
                                                    </button>
                                                    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                                        <a class="dropdown-item" type="button" href="@Url.Action("MemberDetails","AdminMember",new { memberid=item.RegisterID})">View More Details</a>
                                                        <button data-target="#deactive-@item.RegisterID" data-toggle="modal" class="dropdown-item" type="button">Deactive</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <!--Confirmation-->
                                    <div class="modal fade" id="deactive-@item.RegisterID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-body" style="margin-top:10px">
                                                    <div class="text-center">
                                                        <h5 style="color:black">Are you sure you want to make this member inactive?</h5>
                                                    </div>
                                                    @using (Html.BeginForm("Deactive", "AdminMember"))
                                                    {
                                                        <input name="registerid" value="@item.RegisterID" hidden />
                                                        <div class="text-center">
                                                            <a class="btn btn-primary" href="@Url.Action("DeactiveMember","AdminMember",new { memberid=item.RegisterID})">Yes</a>
                                                            <button class="btn btn-default" data-dismiss="modal" aria-label="Close">No</button>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--End Confirmation-->
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            
            @if (Model.Count() != 0)
            {
                <div class="row justify-content-center">

                    <nav aria-label="...">
                        <ul class="pagination flex-wrap">

                            <li class="page-item">
                                @if (ViewBag.PageNumber == 1)
                                {
                                    <a class="page-link" href="@Url.Action("Member", new {  sortby=@ViewBag.SortBy,sortorder=@ViewBag.SortOrder,search=@ViewBag.MemberSearch,  page = ViewBag.PageNumber })"><i class="fa fa-angle-left"></i></a>
                                }
                                else
                                {
                                    <a class="page-link" href="@Url.Action("Member", new {  sortby=@ViewBag.SortBy,sortorder=@ViewBag.SortOrder, search=@ViewBag.MemberSearch, page = @ViewBag.PageNumber - 1 })"><i class="fa fa-angle-left"></i></a>
                                }
                            </li>

                            @{
                                double? TotalPages = ViewBag.TotalPages;

                                if (ViewBag.PageNumber != 1 && ViewBag.PageNumber - 2 > 1)
                                {
                                    int page = Convert.ToInt32(@ViewBag.PageNumber) - 3;
                                    <li class="page-item">@Html.ActionLink("1", "Member", new { sortby = @ViewBag.SortBy, sortorder = @ViewBag.SortOrder, search = @ViewBag.MemberSearch, page = 1 }, new { @class = "page-link" })</li>
                                    if (page != 1)
                                    {
                                        <li class="page-item more-pages-dots">@Html.ActionLink("...", "Member", new { sortby = @ViewBag.SortBy, sortorder = @ViewBag.SortOrder, search = @ViewBag.MemberSearch, page = page }, new { @class = "page-link more-pages-dots" })</li>
                                    }
                                }

                                for (int i = 2; i > 0; i--)
                                {
                                    if (ViewBag.PageNumber - i > 0)
                                    {
                                        int page = Convert.ToInt32(@ViewBag.PageNumber) - i;
                                        <li class="page-item">@Html.ActionLink(page.ToString(), "Member", new { sortby = @ViewBag.SortBy, sortorder = @ViewBag.SortOrder, search = @ViewBag.MemberSearch, page = page }, new { @class = "page-link" })</li>
                                    }
                                }

                                <li class="page-item active">
                                    <a class="page-link">@ViewBag.PageNumber<span class="sr-only">(current)</span></a>
                                </li>

                                for (int i = 1; i < 3; i++)
                                {
                                    if (ViewBag.PageNumber + i <= TotalPages)
                                    {
                                        int page = Convert.ToInt32(@ViewBag.PageNumber) + i;
                                        <li class="page-item">@Html.ActionLink(page.ToString(), "Member", new { sortby = @ViewBag.SortBy, sortorder = @ViewBag.SortOrder, search = @ViewBag.MemberSearch, page = page }, new { @class = "page-link" })</li>
                                    }
                                }

                                if (ViewBag.PageNumber != TotalPages && ViewBag.PageNumber + 2 < TotalPages)
                                {
                                    int page = Convert.ToInt32(@ViewBag.PageNumber) + 3;
                                    if (page != TotalPages)
                                    {
                                        <li class="page-item">@Html.ActionLink("...", "Member", new { sortby = @ViewBag.SortBy, sortorder = @ViewBag.SortOrder, search = @ViewBag.MemberSearch, page = page }, new { @class = "page-link more-pages-dots" })</li>
                                    }
                                    <li class="page-item">@Html.ActionLink(TotalPages.ToString(), "Member", new { sortby = @ViewBag.SortBy, sortorder = @ViewBag.SortOrder, search = @ViewBag.MemberSearch, page = TotalPages }, new { @class = "page-link" })</li>
                                }

                            }

                            <li class="page-item">
                                @if (ViewBag.PageNumber == ViewBag.TotalPages)
                                {
                                    <a class="page-link" href="@Url.Action("Member", new { sortby=@ViewBag.SortBy,sortorder=@ViewBag.SortOrder, search=@ViewBag.MemberSearch, page = @ViewBag.PageNumber })"><i class="fa fa-angle-right"></i></a>
                                }
                                else
                                {
                                    <a class="page-link" href="@Url.Action("Member", new { sortby=@ViewBag.SortBy,sortorder=@ViewBag.SortOrder, search=@ViewBag.MemberSearch, page = @ViewBag.PageNumber + 1 })"><i class="fa fa-angle-right"></i></a>
                                }
                            </li>

                        </ul>
                    </nav>

                </div>
            }
        </div>
    </div>
</section>
<!--End Member-->
