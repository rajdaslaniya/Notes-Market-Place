@model NotesMarketPlaces.ViewModels.ManageSystemViewModel
@{
    ViewBag.Title = "Manage System Configuration";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!--Blank-->
<section class="blank"></section>
<!--End Blank-->
<!--Manage Sysyem-->
<section id="manage-sysyem">
    <div class="container">
        <div class="content-box-md">
            <div class="row">
                <div class="col-lg-12 col-md-12 heading">Manage System Configuration</div>
            </div>
            @using (Html.BeginForm("ManageSystem", "AdminSettings", FormMethod.Post,new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="form-group col-lg-6 col-md-8 col-sm-9 col-12">
                        <label for="semail">Support emails*</label>
                        @Html.EditorFor(model => model.SupportEmail, new { htmlAttributes = new { @class = "form-control", @id = "semail", placeholder = "Enter your support email address" } })
                        @Html.ValidationMessageFor(model => model.SupportEmail, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-8 col-sm-9 col-12">
                        <label for="phone">Support Phone Numbers*</label>
                        @Html.EditorFor(model => model.SupportContact, new { htmlAttributes = new { @class = "form-control", @id = "phone", placeholder = "Enter your support phone number" } })
                        @Html.ValidationMessageFor(model => model.SupportContact, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-8 col-sm-9 col-12">
                        <label for="semail">Email Address(es)(for various events system will send notification to these users)*</label>
                        @Html.EditorFor(model => model.NotifyEmail, new { htmlAttributes = new { @class = "form-control", @id = "email", placeholder = "Enter your email address" } })
                        @Html.ValidationMessageFor(model => model.NotifyEmail, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-8 col-sm-9 col-9">
                        <label for="furl">Facebook URL*</label>
                        @Html.EditorFor(model => model.FacebookURL, new { htmlAttributes = new { @class = "form-control", @id = "furl", placeholder = "Enter facebook url" } })
                        @Html.ValidationMessageFor(model => model.FacebookURL, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-8 col-sm-9 col-12">
                        <label for="turl">Twitter URL*</label>
                        @Html.EditorFor(model => model.TwitterURL, new { htmlAttributes = new { @class = "form-control", @id = "turl", placeholder = "Enter twitter url" } })
                        @Html.ValidationMessageFor(model => model.TwitterURL, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-8 col-sm-9 col-12">
                        <label for="lurl">Linkedin URL*</label>
                        @Html.EditorFor(model => model.LinkedInURL, new { htmlAttributes = new { @class = "form-control", @id = "lurl", placeholder = "Enter linkdin url" } })
                        @Html.ValidationMessageFor(model => model.LinkedInURL, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6  col-md-8 col-sm-9 col-12 type-file">
                        <label for="default-note-picture">Default Image for notes(if seller does not provide)</label>
                        @Html.TextBoxFor(model => model.DefaultNote, new { @type = "file", accept = ".jpg , .jpeg , .png", @class = "form-control-file image-upload", @id = "default-note-picture" })
                        @Html.ValidationMessageFor(model => model.DefaultNote, "", new { @class = "text-danger" })
                        @if (!string.IsNullOrEmpty(Model.DefaultNoteURL))
                        {
                            <p>Check default image for  click <a href="@Url.Content(Model.DefaultNoteURL)" target="_blank">here</a></p>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-8 col-sm-9 col-12 type-file">
                        <label for="profilepicture">Default Profile Picture(if seller does not provide)</label>
                        @Html.TextBoxFor(model => model.DefaultProfile, new { @type = "file", accept = ".jpg , .jpeg , .png", @class = "form-control-file image-upload", @id = "profilepicture" })
                        @Html.ValidationMessageFor(model => model.DefaultProfile, "", new { @class = "text-danger" })
                        @if (!string.IsNullOrEmpty(Model.DefaultProfileURL))
                        {
                            <p>Check default image for  click <a href="@Url.Content(Model.DefaultProfileURL)" target="_blank">here</a></p>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-1 col-md-3 col-sm-4 col-4">
                        <button class="btn btn-color" title="submit" role="button" type="submit">Submit</button>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!--End My Profile-->
