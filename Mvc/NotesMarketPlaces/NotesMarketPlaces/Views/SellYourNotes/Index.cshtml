
@model NotesMarketPlaces.Models.SellYourNotesViewModel
@{
    ViewBag.Title = "Index";
    ViewBag.Navigation = "white-navbar";
    ViewBag.Js = "/Scripts/Front/js/script.js";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Blank-->
