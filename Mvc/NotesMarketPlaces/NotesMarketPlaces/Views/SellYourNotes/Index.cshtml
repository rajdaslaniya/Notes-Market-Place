<!--End Dasboard-->
<!--Progress Notes-->
<section id="progress-notes">
    <div class="container">
        <div class="content-box-sm">
            @using (Html.BeginForm("Index", "SellYourNotes", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-lg-7 col-md-7 col-sm-5 heading  my-auto">Progress Notes</div>
                    <div class="col-lg-5 col-md-5 col-sm-7 col-12">
                        <div class="row search" id="table-search">
                            <div class="search-bar col-lg-9 col-md-9 col-sm-9 col-9 form-group">
                                <input type="search" class="form-control" name="inprogresssearch" value="@ViewBag.InProgress" id="search" placeholder="Search">
                            </div>
                            <div class="col-lg-3  col-md-3 col-sm-3 col-3 btn-search">
                                <button class="btn btn-color" type="submit" title="Search" role="button">Search</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="row table-general table-responsive">
                <div class="col-lg-12">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>@Html.ActionLink("Added Date", "Index", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "CreatedDate" })</th>
                                <th>@Html.ActionLink("Title", "Index", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "Title" })</th>
                                <th>@Html.ActionLink("Category", "Index", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "Category" })</th>
                                <th>@Html.ActionLink("Status", "Index", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "Status" })</th>
                                <th class="content-center">@Html.Label("Action")</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model.InProressNotes.Count() == 0)
                            {
                                <tr class="content-center">
                                    <th colspan="5">No Record Found</th>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model.InProressNotes)
                                {

                                    <tr>
                                        <td>@item.CreatedDate.Value.ToString("dd-MM-yyyy")</td>
                                        <td>@item.Title</td>
                                        <td>@item.NotesCategory.Name</td>
                                        <td>@item.ReferenceData.Value</td>
                                        <td>
                                            <div class="table-images">
                                                @if (item.Status == 6)
                                                {
                                                    <a href="@Url.Action("EditNotes", "SellYourNotes",new { id=@item.ID})"><img src="~/Front Image/images/Dashboard/edit.png" alt="edit" class="edit"></a>
                                                    <a><img src="~/Front Image/images/Dashboard/delete.png" alt="delete" class="delete" data-toggle="modal" data-target="#delete-@item.ID"></a>
                                                    <!-- Section Confirmation Box -->
                                                    <div class="modal fade " id="delete-@item.ID" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-confirm-body">
                                                                    <div>
                                                                        <form>

                                                                            <p class="confirm-text">
                                                                                Are you sure, you want to delete this note?
                                                                            </p>

                                                                            <div class="btn-confirm">
                                                                                <a class="btn btn-yes" href="@Url.Action("DeleteDraft", new { id = item.ID })">YES</a>
                                                                                <button class="btn btn-no" data-dismiss="modal" aria-label="Close">NO</button>
                                                                            </div>

                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- Section Confirmation-Box END -->
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action("Details", "Notes", new { id = @item.ID })"><img src="~/Front Images/images/Dashboard/eye.png" alt="view" class="eye"></a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row justify-content-center">

                <nav aria-label="...">
                    <ul class="pagination">

                        <li class="page-item">
                            @if (ViewBag.PageNumber == 1)
                            {
                                <a class="page-link" href="@Url.Action("Index", new { inprogresssearch = @ViewBag.InProgress, publishsearch = @ViewBag.Published, sortorder = @ViewBag.SortOrder, sortby = @ViewBag.SortBy, sortorderpublish = @ViewBag.SortOrderForPublishedNotes, sortbypublish = @ViewBag.SortByForPublishedNotes, inprogresspage = @ViewBag.PageNumber, publishpage = @ViewBag.PageNumberPublished  })"><i class="fa fa-angle-left"></i></a>
                            }
                            else
                            {
                                <a class="page-link" href="@Url.Action("Index", new { inprogresssearch = @ViewBag.InProgress, publishsearch = @ViewBag.Published, sortorder = @ViewBag.SortOrder, sortby = @ViewBag.SortBy, sortorderpublish = @ViewBag.SortOrderForPublishedNotes, sortbypublish = @ViewBag.SortByForPublishedNotes, inprogresspage = @ViewBag.PageNumber - 1, publishpage = @ViewBag.PageNumberPublished  })"><i class="fa fa-angle-left"></i></a>
                            }
                        </li>

                        @{
                            double? TotalPagesInProgress = ViewBag.TotalPageInProgress;

                            for (int i = 1; i <= TotalPagesInProgress; i++)
                            {
                                if (i == ViewBag.PageNumber)
                                {
                                    <li class="page-item active">
                                        <a class="page-link">@i<span class="sr-only">(current)</span></a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">@Html.ActionLink(i.ToString(), "Index", new { inprogresssearch = @ViewBag.InProgress, publishsearch = @ViewBag.Published, sortorder = @ViewBag.SortOrder, sortby = @ViewBag.SortBy, sortorderpublish = @ViewBag.SortOrderForPublishedNotes, sortbypublish = @ViewBag.SortByForPublishedNotes, inprogresspage = i, publishpage = @ViewBag.PageNumberPublished }, new { @class = "page-link" })</li>
                                }
                            }
                        }

                        <li class="page-item">
                            @if (ViewBag.PageNumber == TotalPagesInProgress)
                            {
                                <a class="page-link" href="@Url.Action("Index", new { inprogresssearch = @ViewBag.InProgress, publishsearch = @ViewBag.Published, sortorder = @ViewBag.SortOrder, sortby = @ViewBag.SortBy, sortorderpublish = @ViewBag.SortOrderForPublishedNotes, sortbypublish = @ViewBag.SortByForPublishedNotes, inprogresspage = @ViewBag.PageNumber, publishpage = @ViewBag.PageNumberPublished  })"><i class="fa fa-angle-right"></i></a>
                            }
                            else
                            {
                                <a class="page-link" href="@Url.Action("Index", new { inprogresssearch = @ViewBag.InProgress, publishsearch = @ViewBag.Published, sortorder = @ViewBag.SortOrder, sortby = @ViewBag.SortBy, sortorderpublish = @ViewBag.SortOrderForPublishedNotes, sortbypublish = @ViewBag.SortByForPublishedNotes, inprogresspage = @ViewBag.PageNumber + 1, publishpage = @ViewBag.PageNumberPublished  })"><i class="fa fa-angle-right"></i></a>
                            }
                        </li>

                    </ul>
                </nav>

            </div>

            <div class="row">
                <div class="col-lg-7 col-md-7 col-sm-5 heading  my-auto">Published Notes</div>
                <div class="col-lg-5 col-md-5 col-sm-7 col-12">
                    @using (Html.BeginForm("Index", "SellYourNotes", FormMethod.Get))
                    {
                        <div class="row search" id="table-search">
                            <div class="search-bar col-lg-9 col-md-9 col-sm-9 col-9 form-group">
                                <input type="search" class="form-control" id="search" name="publishsearch" value="@ViewBag.Published" placeholder="Search">
                            </div>
                            <div class="col-lg-3  col-md-3 col-sm-3 col-3 btn-search">
                                <button class="btn btn-color" title="Search" role="button">Search</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="row table-general table-responsive">
                <div class="col-lg-12">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>@Html.ActionLink("Added Date", "Index", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "CreatedDate" })</th>
                                <th>@Html.ActionLink("Title", "Index", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "Title" })</th>
                                <th>@Html.ActionLink("Category", "Index", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "Category" })</th>
                                <th>@Html.ActionLink("Sell Type", "Index", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "SellType" })</th>
                                <th>@Html.ActionLink("Price", "Index", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "Price" })</th>
                                <th class="content-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.PublishedNotes.Count() == 0)
                            {
                                <tr class="content-center">
                                    <th colspan="6">No Record Found</th>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model.PublishedNotes)
                                {
                                    <tr>
                                        <td>@item.CreatedDate.Value.ToString("dd-MM-yyyy")</td>
                                        <td>@item.Title</td>
                                        <td>@item.NotesCategory.Name</td>
                                        @if (@item.IsPaid == true)
                                        {
                                            <td> Paid</td>
                                            <td>$@item.SellingPrice</td>
                                        }
                                        else
                                        {
                                            <td>Free</td>
                                            <td>$0</td>
                                        }

                                        <td>
                                            <div class="table-images">
                                                <a href="@Url.Action("Details","Notes", new { id = @item.ID })"><img src="~/Front Image/images/Dashboard/eye.png" alt="view" class="eye"></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row justify-content-center">

                <nav aria-label="...">
                    <ul class="pagination">

                        <li class="page-item">
                            @if (ViewBag.PageNumber == 1)
                            {
                                <a class="page-link" href="@Url.Action("Index", new { inprogresssearch = @ViewBag.InProgress, publishsearch = @ViewBag.Published, sortorder = @ViewBag.SortOrder, sortby = @ViewBag.SortBy, sortorderpublish = @ViewBag.SortOrderForPublishedNotes, sortbypublish = @ViewBag.SortByForPublishedNotes, inprogresspage = @ViewBag.PageNumber, publishpage = @ViewBag.PageNumberPublished  })"><i class="fa fa-angle-left"></i></a>
                            }
                            else
                            {
                                <a class="page-link" href="@Url.Action("Index", new { inprogresssearch = @ViewBag.InProgress, publishsearch = @ViewBag.Published, sortorder = @ViewBag.SortOrder, sortby = @ViewBag.SortBy, sortorderpublish = @ViewBag.SortOrderForPublishedNotes, sortbypublish = @ViewBag.SortByForPublishedNotes, inprogresspage = @ViewBag.PageNumber, publishpage = @ViewBag.PageNumberPublished-1  })"><i class="fa fa-angle-left"></i></a>
                            }
                        </li>

                        @{
                            double? TotalPagePublish = ViewBag.TotalPagePublish;

                            for (int i = 1; i <= TotalPagePublish; i++)
                            {
                                if (i == ViewBag.PageNumberPublished)
                                {
                                    <li class="page-item active">
                                        <a class="page-link">@i<span class="sr-only">(current)</span></a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">@Html.ActionLink(i.ToString(), "Index", new { inprogresssearch = @ViewBag.InProgress, publishsearch = @ViewBag.Published, sortorder = @ViewBag.SortOrder, sortby = @ViewBag.SortBy, sortorderpublish = @ViewBag.SortOrderForPublishedNotes, sortbypublish = @ViewBag.SortByForPublishedNotes, inprogresspage = i, publishpage = @ViewBag.PageNumberPublished }, new { @class = "page-link" })</li>
                                }
                            }
                        }

                        <li class="page-item">
                            @if (ViewBag.PageNumberPublished == TotalPagePublish)
                            {
                                <a class="page-link" href="@Url.Action("Index", new { inprogresssearch = @ViewBag.InProgress, publishsearch = @ViewBag.Published, sortorder = @ViewBag.SortOrder, sortby = @ViewBag.SortBy, sortorderpublish = @ViewBag.SortOrderForPublishedNotes, sortbypublish = @ViewBag.SortByForPublishedNotes, inprogresspage = @ViewBag.PageNumber, publishpage = @ViewBag.PageNumberPublished  })"><i class="fa fa-angle-right"></i></a>
                            }
                            else
                            {
                                <a class="page-link" href="@Url.Action("Index", new { inprogresssearch = @ViewBag.InProgress, publishsearch = @ViewBag.Published, sortorder = @ViewBag.SortOrder, sortby = @ViewBag.SortBy, sortorderpublish = @ViewBag.SortOrderForPublishedNotes, sortbypublish = @ViewBag.SortByForPublishedNotes, inprogresspage = @ViewBag.PageNumber , publishpage = @ViewBag.PageNumberPublished + 1 })"><i class="fa fa-angle-right"></i></a>
                            }
                        </li>

                    </ul>
                </nav>

            </div>
        </div>
     </div>
</section>
<!--End Progress Notes-->
