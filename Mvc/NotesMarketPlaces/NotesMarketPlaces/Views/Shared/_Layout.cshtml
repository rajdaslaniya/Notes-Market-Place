<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    
    <!-- Icon set in title -->
    <link rel="shortcut icon" href="~/Image/images/Favicon/favicon.ico">

    <!--Link With font -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans
     :wght@300;400;600;700&display=swap" rel="stylesheet">

    <!--Font Awesome-->
    <link rel="stylesheet" href="~/Content/Front/css/fontawesome/css/font-awesome.min.css">

    <!-- Animate CSS -->
    <link rel="stylesheet" href="~/Content/Front/css/animate/animate.min.css">

    <!--Bootstrap Csss-->
    <link rel="stylesheet" href="~/Content/Front/css/bootstrap/bootstrap.min.css">

    <!--General Css-->
    <link rel="stylesheet" href="~/Content/Front/css/geneal.css">

    <!-- External Css -->
    <link rel="stylesheet" href="~/Content/Front/css/style.css">

    <!--Responsive Css-->
    <link rel="stylesheet" href="~/Content/Front/css/responsive.css">

</head>
<body>
    <!--Navigation-->
    <header>
        <nav class="navbar navbar-expand-lg navbar-fixed-height fixed-top white-navbar">
            <div class="container">
                <div class="row">

                    <!-- Logo -->
                    <div class="navbar-header col-lg-3 col-10">
                        <a class="navbar-brand text-left" href="@Url.Action("Index","Home")">
                            <img src="~/Image/images/Logo/dark-logo.png" alt="logo">
                        </a>
                    </div>

                    <!-- Mobile Menu Button -->
                    <button class="navbar-toggler collapsed col-2" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="mobile-nav-close-btn">&times;</span>
                        <span class="mobile-nav-open-btn">&#9776;</span>
                    </button>

                    @{
                        var _dbcontext = new NotesMarketPlaces.Models.NotesMarketPlaceEntities1();
                    }
                    <div class="collapse navbar-collapse col-lg-9" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item"><a class="nav-link @ViewBag.SearchNotes" href="@Url.Action("SearchNotes","Notes")">Search Notes</a></li>
                            <li class="nav-item"><a class="nav-link @ViewBag.SellYourNotes" href="@Url.Action("Index","SellYourNotes")">Sell Your Notes</a></li>
                            <li class="nav-item"><a class="nav-link @ViewBag.BuyerRequest" href="@Url.Action("BuyerRequest","BuyerRequest")">Buyer Request</a></li>
                            <li class="nav-item"><a class="nav-link @ViewBag.FAQ" href="@Url.Action("FAQ","Home")">FAQ</a></li>
                            <li class="nav-item"><a class="nav-link @ViewBag.ContactUs" href="@Url.Action("ContactUs","Home")">Contact Us</a></li>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Member"))
                            {
                                var user = _dbcontext.Users.Where(x => x.EmailID == User.Identity.Name).FirstOrDefault();
                                var profile = _dbcontext.UserProfiles.Where(x => x.UserID == user.ID).FirstOrDefault();              
                                    <li class="nav-item profile-dropdown">
                                        <a class="nav-link" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            @if (profile == null || profile.ProfilePicture == null)
                                            {
                                                var defaultImage = _dbcontext.SystemConfigurations.Where(x => x.Key == "defaultprofile").FirstOrDefault();
                                                <img src="@Url.Content(defaultImage.Value)" class="rounded-circle" />
                                            }
                                            else
                                            {
                                                <img src="@Url.Content(profile.ProfilePicture)" class="rounded-circle">
                                            }
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <a class="dropdown-item @ViewBag.MyProfile" href="@Url.Action("MyProfile","Users")">My Profile</a>
                                            <a class="dropdown-item @ViewBag.MyDownloads" href="@Url.Action("MyDownloads","Users")">My Downloads</a>
                                            <a class="dropdown-item @ViewBag.MySoldNotes" href="@Url.Action("MySoldNotes","Users")">My Sold Notes</a>
                                            <a class="dropdown-item @ViewBag.RejectedNotes" href="@Url.Action("MyRejectedNotes","Users")">My Rejected Notes</a>
                                            <a class="dropdown-item @ViewBag.ChangePassword" href="@Url.Action("ChangePassword","Account")">Change Password</a>
                                            <a class="dropdown-item logout" href="@Url.Action("Logout","Account")">Logout</a>
                                        </div>
                                    </li>
                                    <li class="nav-item"><a class="nav-link" data-toggle="modal" data-target="#confirmationLogout">Logout</a></li>
                            }
                            else
                            {
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("Login","Account")">Login</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <!-- Header Ends -->
    <!--End Navigatio-->
    <!-- Confirmation -->
    <div class="modal fade" id="confirmationLogout" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body" style="margin-top:10px">
                    <div class="text-center">
                        <h5 style="color:black">Are you sure, you want to logout?</h5>
                    </div>

                    <div class="text-center">
                        <a class="btn btn-primary" href="@Url.Action("Logout","Account")">Yes</a>
                        <button class="btn btn-default" data-dismiss="modal" aria-label="Close">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--End Confirmation-->
    @RenderBody()
    <!--Footer-->
    <footer>
        <div class="container">
            <div class="row">

                <!-- Copyright -->
                <div class="col-md-6 col-sm-8 footer-text text-left">
                    <p>Copyright &copy; TatvaSoft All Rights Reserved By</p>
                </div>
                @{ 
                    var facebookurl = _dbcontext.SystemConfigurations.Where(x => x.Key == "facebookurl").FirstOrDefault();
                    var twitterurl = _dbcontext.SystemConfigurations.Where(x => x.Key == "twitterurl").FirstOrDefault();
                    var linkedinurl = _dbcontext.SystemConfigurations.Where(x => x.Key == "linkedinurl").FirstOrDefault();
                }
                <!-- Social Icon -->
                <div class="col-md-6 col-sm-4 foot-icon col-sm-4 text-right">
                    <ul class="social-list">
                        <li><a href="@Url.Content(facebookurl.Value)"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="@Url.Content(twitterurl.Value)"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="@Url.Content(linkedinurl.Value)"><i class="fa fa-linkedin"></i></a></li>
                    </ul>
                </div>

            </div>
        </div>
    </footer>
    <!--End Footer-->
    <!--Jquery-->
    <script src="~/Scripts/Front/js/jquery.js"></script>
    <!--Popper Js-->
    <script src="~/Scripts/Front/js/bootstrap/popper.min.js"></script>
    <!--Bootstrap Js -->
    <script src="~/Scripts/Front/js/bootstrap/bootstrap.min.js"></script>

    <!--Home Js-->
    <script src="~/Scripts/Front/js/script.js"></script>

    @if (ViewBag.Requested != null)
    {
        <script type="text/javascript">
            window.$("#thankspopup").modal("show");
        </script>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
