@model IEnumerable<NotesMarketPlaces.ViewModels.MyDownloadsViewModel>

@{
    ViewBag.Title = "My Downloads";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--Blank-->
<section class="blank">
</section>
<!--End Blank-->
<!--My Download-->
<section id="my-download">
    <div class="container">
        <div class="content-box-md">
            @using (Html.BeginForm("MyDownloads", "Users", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-lg-7 col-md-7 col-sm-5 col-12 heading  my-auto">My Download</div>
                    <div class="col-lg-5 col-md-5 col-sm-7 col-12">
                        <div class="row search" id="table-search">
                            <div class="search-bar col-lg-9 col-md-9 col-sm-9 col-9 form-group">
                                <input type="search" name="mydownloadsearch" value="@ViewBag.mydownload" class="form-control" id="search" placeholder="Search">
                            </div>
                            <div class="col-lg-3  col-md-3 col-sm-3 col-3 btn-search">
                                <button class="btn btn-color" title="Search">Search</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="row table-general table-responsive">
                <div class="col-lg-12">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sr No.</th>
                                <th>@Html.ActionLink("Note Title", "MyDownloads", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "NoteTitle" })</th>
                                <th>@Html.ActionLink("Note Category", "MyDownloads", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "NoteCategory" })</th>
                                <th>@Html.ActionLink("Buyer", "MyDownloads", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "Buyer" })</th>
                                <th>@Html.ActionLink("Sell Type", "MyDownloads", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "SellType" })</th>
                                <th>@Html.ActionLink("Price", "MyDownloads", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "NotePrice" })</th>
                                <th>@Html.ActionLink("Download Date/Time", "MyDownloads", new { sortorder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), sortby = "DowloadDate" })</th>
                                <th class="content-center"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="8" class="content-center">No Record Found</td>
                                </tr>
                            }
                            else
                            {
                                var srno = (ViewBag.PageNumber - 1) * 10;
                                foreach (var item in Model)
                                {
                                    { srno = srno + 1; }
                                    <tr>
                                        <td>@srno</td>
                                        <td>@item.Title</td>
                                        <td>@item.Category</td>
                                        <td>@item.Buyer</td>
                                        <td>@item.SellType</td>
                                        @if (@item.SellType == "Paid")
                                        {
                                            <td>$@item.Price</td>
                                        }
                                        else
                                        {
                                            <td>$0</td>
                                        }
                                        <td>@item.DownloadDate.Value.ToString("dd MMM yyyy,hh:mm:ss")</td>
                                        <td class="content-center">
                                            <div class="table-images">
                                                <a href="@Url.Action(" Details","Notes",new { id=@item.NoteID})"><img src="~/Image/images/Dashboard/eye.png" alt="view" class="eye"></a>
                                                <div class="btn-group dropleft">
                                                    <button type="button" id="dropdownMenu2" class="btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <img src="~/Image/images/icon/dots.png" alt="menu" class="dots">
                                                    </button>
                                                    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                                        <a class="dropdown-item" href="@Url.Action(" DownloadNote","Notes",new { noteid=@item.NoteID})" role="button">Download Note</a>
                                                        <a class="dropdown-item" data-toggle="modal" data-target="#addreview-@item.DownloadID">Add Review/Feedback</a>
                                                        <a class="dropdown-item" data-toggle="modal" data-target="#addspam-@item.DownloadID">Report as Inappropriate</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <!-- Section Add Review / Feedback -->
                                    <div class="modal fade " id="addreview-@item.DownloadID" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <div>
                                                        <h3 class="heading-md">Add Review</h3>
                                                    </div>
                                                    <div>
                                                        @using (Html.BeginForm("AddReview", "Users", FormMethod.Post))
                                                        {
                                                            @Html.AntiForgeryToken()

                                                            <input name="DownloadID" value="@item.DownloadID" hidden />
                                                            <input name="NoteID" value="@item.NoteID" hidden>
                                                            <!-- Give Rating -->
                                                            <div class="rate">
                                                                @Html.RadioButton("Rate1", 5, new { @type = "radio", @id = "star5", @name = "Rate1" })
                                                                <label for="star5" title="text">5 stars</label>
                                                                @Html.RadioButton("Rate1", 4, new { @type = "radio", @id = "star4", @name = "Rate1" })
                                                                <label for="star4" title="text">3 stars</label>
                                                                @Html.RadioButton("Rate1", 3, new { @type = "radio", @id = "star3", @name = "Rate1" })
                                                                <label for="star5" title="text">3 stars</label>
                                                                @Html.RadioButton("Rate1", 2, new { @type = "radio", @id = "star2", @name = "Rate1" })
                                                                <label for="star2" title="text">2 stars</label>
                                                                @Html.RadioButton("Rate1", 1, new { @type = "radio", @id = "star1", @name = "Rate1" })
                                                                <label for="star1" title="text">1 stars</label>
                                                                @Html.ValidationMessageFor(model => item.Ratings, "", new { @class = "text-danger" })
                                                            </div>
                                                            <br>
                                                            <div class="form-group" id="moal-review-feedback">
                                                                <label for="review-@item.Comments">Description *</label>
                                                                <textarea class="form-control" name="Comments" id="review-@item.Comments" placeholder="comments..." required></textarea>
                                                            </div>

                                                            <div class="btn-submit">
                                                                <button class="btn btn-color" title="Submit">Submit</button>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Section Add Review / Feedback END -->
                                    <!-- Section Spam -->
                                    <div class="modal fade " id="addspam-@item.DownloadID" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <div>
                                                        <h3 class="heading-md">@item.Title</h3>
                                                    </div>
                                                    <div>
                                                        @using (Html.BeginForm("SpamReports", "Users", FormMethod.Post))
                                                        {
                                                            @Html.AntiForgeryToken()

                                                            <input name="downloadid" value="@item.DownloadID" hidden />
                                                            <input name="noteid" value="@item.NoteID" hidden>

                                                            <div class="form-group" id="moal-review-feedback">
                                                                <label for="review-@item.DownloadID">Remark *</label>
                                                                <textarea class="form-control" name="spamreports" id="spam-report-@item.DownloadID" placeholder="comments..." required></textarea>
                                                            </div>

                                                            <div class="btn-submit">
                                                                <button class="btn btn-color" onclick="myFunction()">Submit</button>
                                                                <button class="btn btn-color" data-dismiss="modal" aria-label="Close">Cancel</button>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Section Spam -->
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            @if (Model.Count() != 0)
            {
                <div class="row justify-content-center">

                    <nav aria-label="...">
                        <ul class="pagination flex-wrap">

                            <li class="page-item">
                                @if (ViewBag.PageNumber == 1)
                                {
                                    <a class="page-link" href="@Url.Action("MyDownloads", new { sortby=@ViewBag.SortBy,sortorder=@ViewBag.SortOrder,mydownloadsearch=@ViewBag.mydownload,  page = ViewBag.PageNumber })"><i class="fa fa-angle-left"></i></a>
                                }
                                else
                                {
                                    <a class="page-link" href="@Url.Action("MyDownloads", new {  sortby=@ViewBag.SortBy,sortorder=@ViewBag.SortOrder, mydownloadsearch=@ViewBag.mydownload, page = @ViewBag.PageNumber - 1 })"><i class="fa fa-angle-left"></i></a>
                                }
                            </li>

                            @{
                                double? TotalPages = ViewBag.TotalPages;

                                if (ViewBag.PageNumber != 1 && ViewBag.PageNumber - 2 > 1)
                                {
                                    int page = Convert.ToInt32(@ViewBag.PageNumber) - 3;
                                    <li class="page-item">@Html.ActionLink("1", "MyDownloads", new { sortby = @ViewBag.SortBy, sortorder = @ViewBag.SortOrder, mydownloadsearch = @ViewBag.mydownload, page = 1 }, new { @class = "page-link" })</li>
                                    if (page != 1)
                                    {
                                        <li class="page-item more-pages-dots">@Html.ActionLink("...", "MyDownloads", new { sortby = @ViewBag.SortBy, sortorder = @ViewBag.SortOrder, mydownloadsearch = @ViewBag.mydownload, page = page }, new { @class = "page-link more-pages-dots" })</li>
                                    }
                                }

                                for (int i = 2; i > 0; i--)
                                {
                                    if (ViewBag.PageNumber - i > 0)
                                    {
                                        int page = Convert.ToInt32(@ViewBag.PageNumber) - i;
                                        <li class="page-item">@Html.ActionLink(page.ToString(), "MyDownloads", new { sortby = @ViewBag.SortBy, sortorder = @ViewBag.SortOrder, mydownloadsearch = @ViewBag.mydownload, page = page }, new { @class = "page-link" })</li>
                                    }
                                }

                                <li class="page-item active">
                                    <a class="page-link">@ViewBag.PageNumber<span class="sr-only">(current)</span></a>
                                </li>

                                for (int i = 1; i < 3; i++)
                                {
                                    if (ViewBag.PageNumber + i <= TotalPages)
                                    {
                                        int page = Convert.ToInt32(@ViewBag.PageNumber) + i;
                                        <li class="page-item">@Html.ActionLink(page.ToString(), "MyDownloads", new { sortby = @ViewBag.SortBy, sortorder = @ViewBag.SortOrder, mydownloadsearch = @ViewBag.mydownload, page = page }, new { @class = "page-link" })</li>
                                    }
                                }

                                if (ViewBag.PageNumber != TotalPages && ViewBag.PageNumber + 2 < TotalPages)
                                {
                                    int page = Convert.ToInt32(@ViewBag.PageNumber) + 3;
                                    if (page != TotalPages)
                                    {
                                        <li class="page-item">@Html.ActionLink("...", "MyDownloads", new { sortby = @ViewBag.SortBy, sortorder = @ViewBag.SortOrder, mydownloadsearch = @ViewBag.mydownload, page = page }, new { @class = "page-link more-pages-dots" })</li>
                                    }
                                    <li class="page-item">@Html.ActionLink(TotalPages.ToString(), "MyDownloads", new { sortby = @ViewBag.SortBy, sortorder = @ViewBag.SortOrder, mydownloadsearch = @ViewBag.mydownload, page = TotalPages }, new { @class = "page-link" })</li>
                                }

                            }

                            <li class="page-item">

                                @if (ViewBag.PageNumber == ViewBag.TotalPages)
                                {
                                    <a class="page-link" href="@Url.Action("MyDownloads", new { sortby=@ViewBag.SortBy,sortorder=@ViewBag.SortOrder, mydownloadsearch=@ViewBag.mydownload, page = @ViewBag.PageNumber })"><i class="fa fa-angle-right"></i></a>
                                }
                                else
                                {
                                    <a class="page-link" href="@Url.Action("MyDownloads", new { sortby=@ViewBag.SortBy,sortorder=@ViewBag.SortOrder, mydownloadsearch=@ViewBag.mydownload, page = @ViewBag.PageNumber + 1 })"><i class="fa fa-angle-right"></i></a>
                                }
                            </li>

                        </ul>
                    </nav>

                </div>
            }
        </div>
    </div>
</section>
<!--End My Download-->
<script>
    function myFunction() {
        confirm("Are you sure you want to mark this report as spam, you cannot update it later");
    }
</script>