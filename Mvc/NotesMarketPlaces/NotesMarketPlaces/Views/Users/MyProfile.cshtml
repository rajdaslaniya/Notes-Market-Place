@model NotesMarketPlaces.ViewModels.MyProfileViewModel
@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Blank-->
<section class="blank">
</section>
<!--End Blank-->
<!--User Profile Heading-->
<section id="bg-heading">
    <div id="up-heading" class="text-center">User Profile</div>
</section>
<!--End User Profile Heading-->
@using (Html.BeginForm("MyProfile", "Users", FormMethod.Post,new {enctype="multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <!--User Form details-->
    <section id="user-profile">
        <div class="content-box-md">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="heading">Basic Profile and Details</div>
                    </div>
                </div>
                <div class="row">
                    @Html.HiddenFor(model=>model.UserID)
                    <div class="form-group col-lg-6 col-md-6 col-sm-10 col-12">
                        @Html.LabelFor(model => model.FirstName)
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @id = "fname", @placeholder = "Enter your first name" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-10 col-12">
                        @Html.LabelFor(model => model.LastName)
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @id = "lname", @placeholder = "Enter your last name" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-10 col-12">
                        @Html.LabelFor(model => model.Email)
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @id = "email", @placeholder = "Enter your email address" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-10 col-12">
                        @Html.LabelFor(model => model.DOB)
                        @Html.TextBoxFor(m => m.DOB, "{0:MM/dd/yyyy}", new { @class = "form-control",@type="text", onfocus = "(this.type='date')", @placeholder = "Enter your date of birth",@id= "date-of-birth" } )
                        @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                        
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-10 col-12">
                        @Html.LabelFor(model => model.Gender)
                        @Html.DropDownListFor(model => model.Gender, new SelectList(Model.GenderList, "ID", "Value", Model.Gender), "Select your gender", new { @class = "form-control", id = "gender" })
                        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-10 col-12">
                        @Html.LabelFor(model => model.PhoneNumber)
                        <div class="form-row">
                            <div class="col-lg-3 col-md-3 col-sm-3 col-4">
                                @Html.DropDownListFor(model => model.PhoneCode, new SelectList(Model.CountryList, "CountryCode", "CountryCode", Model.PhoneCode), "Code", new { @class = "form-control", @id = "phoneCode" })
                                @Html.ValidationMessageFor(model => model.PhoneCode, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-lg-9 col-md-9 col-sm-9 col-8">
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @id = "phonenumber", @placeholder = "Enter your phone number" } })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-lg-6  col-md-6 col-sm-10 col-12 type-file">
                        @Html.LabelFor(model => model.ProfilePicture)
                        @Html.TextBoxFor(model => model.ProfilePicture, new { @type = "file", accept = ".jpg , .jpeg , .png", @class = "form-control-file display-image", @id = "profilepicture" })
                        @Html.ValidationMessageFor(model => model.ProfilePicture, "", new{ @class = "text-danger" })
                        @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                        {
                            <p>To see your Profile Picture <a href="@Url.Content(Model.ProfilePictureUrl)" target="_blank">Click Here</a></p>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="heading" style="margin-top: 40px">Address Details</div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 col-md-6 col-sm-10 col-12">
                        @Html.LabelFor(model=>model.AddressLine1)
                        @Html.EditorFor(model=>model.AddressLine1, new { htmlAttributes = new { @class = "form-control", @id = "add1", @placeholder = "Enter your address" } })
                        @Html.ValidationMessageFor(model=>model.AddressLine1,"",new { @class="text-danger"})
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-10 col-12">
                        @Html.LabelFor(model => model.AddressLine2)
                        @Html.EditorFor(model => model.AddressLine2, new { htmlAttributes = new { @class = "form-control", @id = "add2", @placeholder = "Enter your address" } })
                        @Html.ValidationMessageFor(model => model.AddressLine2, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-10 col-12">
                        @Html.LabelFor(model => model.City)
                        @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", @id = "city", @placeholder = "Enter your city" } })
                        @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                     </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-10 col-12">
                        @Html.LabelFor(model=>model.State)
                        @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control", @id = "state", @placeholder = "Enter your State" } })
                        @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-10 col-12">
                        @Html.LabelFor(model=>model.ZipCode)
                        @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control", @id = "zipcode", @placeholder = "Enter your zipcode"} })
                        @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-10 col-12">
                        @Html.LabelFor(model => model.Country)
                        @Html.DropDownListFor(model => model.Country, new SelectList(Model.CountryList, "Name", "Name", Model.Country), "Select country", new { @class = "form-control", id = "country" })
                        @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="heading" style="margin-top: 40px">University and College Information</div>
                    </div>
                </div>
                <form>
                    <div class="row">
                        <div class="form-group col-lg-6 col-md-6 col-sm-10 col-12">
                            @Html.LabelFor(model=>model.University)
                            @Html.EditorFor(model => model.University, new { htmlAttributes = new { @class = "form-control", @id = "university", @placeholder = "Enter your university" } })
                            @Html.ValidationMessageFor(model => model.University, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-lg-6 col-md-6 col-sm-10 col-12">
                            @Html.LabelFor(model => model.College)
                            @Html.EditorFor(model => model.College, new { htmlAttributes = new { @class = "form-control", @id = "college", @placeholder = "Enter your college" } })
                            @Html.ValidationMessageFor(model => model.College, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-2 col-md-2 col-sm-3 col-3">
                            <button class="btn btn-color"  title="Submit" type="Submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!--End User Profile details-->
}
